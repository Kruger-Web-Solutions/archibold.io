# archibold.io (C) 2016 #
#########################

source <(curl -s https://archibold.io/require)

require echomd

echoWithHeader() {
  echomd "
# archibold.io
$@
"
}

askForUser() {
  local choice=
  echoWithHeader "
  Please write your GitHub *user name* and press enter
"
  read choice
  if [ "$(echo $choice | sed -e 's/ *//g')" = "" ]; then
    echo ''
    echomd "  #red(*Nope*), the name is not valid, let's try again ... "
    sleep 2 && clear && askForUser
  else
    GIT_USER=$choice
  fi
}

askForEmail() {
  local choice=
  echoWithHeader "
  Please write the *email* used by $GIT_USER
"
  read choice
  if [ "$(echo $choice | sed -e 's/ *//g')" = "" ]; then
    echo ''
    echomd "  #red(*Nope*), the email is not valid, let's try again ... "
    sleep 2 && clear && askForEmail
  else
    GIT_EMAIL=$choice
  fi
}

if [ "$(which sudo 2> /dev/null)" = "" ]; then
  clear
  echoWithHeader '
  Installing sudo'
  bash <(curl -s https://archibold.io/install/sudo)
fi

if [ "$(which xsel 2> /dev/null)" = "" ]; then
  sudo pacman -S --needed xsel
fi

clear
echoWithHeader '
  Installing dependencies'
sudo pacman -S --needed --noconfirm git gjs openssh python > /dev/null 2>&1

if [ "$GIT_USER" = "" ]; then
  clear
  askForUser
fi

if [ "$GIT_EMAIL" = "" ]; then
  clear
  askForEmail
fi

git config --global user.name "$GIT_USER"
git config --global user.email "$GIT_EMAIL"
git config --global push.default simple
if [ ! -f ~/.ssh/id_rsa ]; then
  ssh-keygen -t rsa -C "$GIT_EMAIL"
  eval "$(ssh-agent -s)"
  ssh-add ~/.ssh/id_rsa
fi

clear
echoWithHeader '
  #green(*âœ”*) *git* successfully configured.

  You can now add your key* in https://github.com/settings/ssh
   * the key can be pasted via Ctrl+v
'

cat ~/.ssh/id_rsa.pub | xsel --clipboard --input

cat ~/.ssh/id_rsa.pub
