mkdir -p .config
chown alarm:alarm .config


echo "[core]
idle-time=0
require-input=false

[shell]
client=/home/alarm/.xinitrc
animation=none
close-animation=none
startup-animation=none
locking=false
">.config/weston.ini
chown alarm:alarm .config/weston.ini


echo "# x11 configuration
# xrandr -s 1280x720
# xset s off -dpms
# unclutter &
./.browse --fullscreen file:///home/alarm/www/index.html

# in case you'd like to see if it's hardware accelerated, try one of these
