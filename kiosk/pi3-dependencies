#!/usr/bin/env bash

# (c) 2018 Andrea Giammarchi - @WebReflection - (ISC)

pacman -Sy --needed --noconfirm pacman-mirrorlist
pacman -Su --noconfirm
pacman -S --needed --noconfirm mesa libva-vdpau-driver libva-mesa-driver \
                               xorg-server xorg-xinit xf86-video-fbdev \
                               xorg-xset xorg-xrandr unclutter \
                               alsa-utils \
                               gjs gnome-themes-standard \
                               webkit2gtk gst-plugins-base gst-plugins-good \
                               gstreamer-vaapi \
                               gst-libav gst-plugins-ugly
pacman-optimize
reboot
